<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LetMeCook" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_300</item>
        <item name="colorPrimaryVariant">@color/blue_400</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/amber_600</item>
        <item name="colorSecondaryVariant">@color/amber_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/pink_50</item>
        <item name="colorOnBackground">@color/black</item>
        <item name="colorSurface">@color/pink_50</item>
        <item name="colorOnSurface">@color/green_800</item>
        <item name="colorError">@color/red_800</item>
        <item name="colorOnError">@color/white</item>
    </style>

    <style name="BottomNavigationCompact" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconSize">24dp</item>
        <item name="itemHorizontalTranslationEnabled">false</item>
    </style>
</resources>